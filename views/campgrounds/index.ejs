<% layout("layouts/boilerplate") %> <% title = "Campgrounds" %>
<main>
  <h1>Welcome to Campgrounds</h1>
  <!-- link to add a new campground  -->
  <div>
    <a href="/campgrounds/new">Add Campground</a>
  </div>
  <!-- list campgrounds with links to their details -->
  <section>
    <%for (let c of campgrounds) {%>
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <img class="img-fluid" src="<%= c.image %>" alt="" />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h2 class="card-title"><%= c.title %></h2>
            <p class="card-text"><%= c.description %></p>
            <p class="card-text">
              <small class="text-muted"><%= c.location %></small>
            </p>
            <a class="btn btn-primary" href="/campgrounds/<%= c._id %>"
              >View Details</a
            >
          </div>
        </div>
      </div>
    </div>
    <% }%>
  </section>
</main>
