<% layout("layouts/boilerplate") %> <% title = "Create Campground" %>
<body>
  <h1 class="text-center">Add Campground</h1>
  <!-- form to create a new campground -->
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="post">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          class="form-control"
          name="campground[title]"
          id="title"
        />
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          class="form-control"
          name="campground[location]"
          id="location"
        />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image Url</label>
        <input
          type="text"
          class="form-control"
          name="campground[image]"
          id="image"
        />
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="number"
            class="form-control"
            name="campground[price]"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="campground[description]"
          id="description"
          class="form-control"
        ></textarea>
      </div>
      <button class="btn btn-success">Add Campground</button>
    </form>
    <!-- link back to the list of campgrounds  -->
    <div class="mt-3">
      <a href="/campgrounds">Back to Campgrounds</a>
    </div>
  </div>
</body>
