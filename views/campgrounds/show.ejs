<% layout("layouts/boilerplate") %> <% title = "Campgrounds" %>
<main>
  <div class="row">
    <div class="col-6 offset-3">
      <div class="card mb-3">
        <img src="<%= campground.image %>" alt="" class="card-img-top" />
        <div class="card-body">
          <h1 class="card-title"><%= campground.title %></h1>
          <p class="card-text text-muted"><%= campground.location %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= campground.description %></li>
          <li class="list-group-item">$<%= campground.price %> per night</li>
        </ul>
        <div class="card-body">
          <!-- link to edit campgrounds -->
          <a
            href="/campgrounds/<%= campground._id %>/edit"
            class="card-link btn btn-info"
            >Edit</a
          >
          <!-- form to delete campground -->
          <form
            action="/campgrounds/<%= campground._id %>?_method=delete"
            method="post"
            class="d-inline"
          >
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <!-- form for leaving a review -->
      <h2>Leave a Review</h2>
      <form
        action="/campgrounds/<%= campground._id %>/reviews"
        method="post"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label for="body" class="form-label">Review</label>
          <textarea
            name="review[body]"
            id="body"
            class="form-control"
            required
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a valid review.</div>
        </div>
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input
            type="range"
            name="review[rating]"
            id="rating"
            class="form-control"
            min="1"
            max="5"
          />
        </div>
        <button class="btn btn-success">Submit</button>
      </form>
      <!-- link to view campgrounds -->
      <div class="card-footer text-muted mt-3">
        <a href="/campgrounds">View Campgrounds</a>
      </div>
    </div>
  </div>
</main>
